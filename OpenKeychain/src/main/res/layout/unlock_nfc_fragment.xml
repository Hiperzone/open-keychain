<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:persistentDrawingCache="all">

    <TextView
        android:id="@+id/unlockTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/nfc_text" />

    <org.sufficientlysecure.keychain.ui.widget.FeedbackIndicatorView
        android:id="@+id/unlockUserFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp">
    </org.sufficientlysecure.keychain.ui.widget.FeedbackIndicatorView>

    <RelativeLayout
        android:id="@+id/unlockInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/unlockUserFeedback"
        android:layout_below="@id/unlockTip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/nfc" />

    </RelativeLayout>
</RelativeLayout>