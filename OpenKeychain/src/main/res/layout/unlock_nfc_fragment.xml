<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:persistentDrawingCache="all">

    <RelativeLayout
        android:id="@+id/nfcFeedbackLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/unlockTipLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:tint="@color/primary"
                android:src="@android:drawable/ic_dialog_alert" />

            <TextView
                android:id="@+id/unlockTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/nfc_move_card"
                android:tint="@color/primary" />
        </LinearLayout>

        <org.sufficientlysecure.keychain.ui.widget.FeedbackIndicatorView
            android:id="@+id/unlockUserFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unlockTipLayout"
            android:layout_margin="24dp">

        </org.sufficientlysecure.keychain.ui.widget.FeedbackIndicatorView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unlockTipLayout"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/unlockInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nfcFeedbackLayout"
        android:layout_margin="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/nfc_black_48dp" />
    </RelativeLayout>

</RelativeLayout>